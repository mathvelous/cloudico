{% extends 'base.twig' %}

{% block body %}
    <main class="container">
        <div class="row space_between mb15 align-center">
            <button onclick="goBack()"><img src="/images/prev.png" alt=""></button>
            <a id="profile" href="/profile"><img src="/images/account.png" alt="Compte"></a>
        </div>
        <div class="green_line">
            <h3>{{ word.name }}</h3>
            <p class="type mb20">({{ word.type }})</p>
        </div>
        <div class="loop owl-carousel tags_cloud">
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
        </div>
        <section>
            <article class="container_definition">
                <p class="text">{{ word.definition }}</p>
            </article>
            <div class="row space_between mb70">
                <button class="button_green_sm">
                    <a href="">Modifier</a>
                </button>
                <button id="favorite" class="button_blue_sm">
                    <a href="">Enregistrer</a>
                </button>
            </div>
        </section>
    </main>
{% endblock %}
{% block js %}
    <script src="/js/owl.carousel.min.js"></script>
    <script>
        function goBack() {
            window.history.back();
        }

        $(document).ready(function () {
            $(".owl-carousel").owlCarousel();

            $('.loop').owlCarousel({
                center: true,
                items: 2,
                loop: true,
                margin: 20,
                responsive: {
                    600: {
                        items: 4
                    }
                }
            });

           $('#favorite').on('click', function (e) {
               e.preventDefault()
               $.ajax({
                   method: 'POST',
                   url: '/favorites',
                   data: {id:{{ word.id }}},
                   success: function (data){

                   }
               })
           })

        });
    </script>
{% endblock %}