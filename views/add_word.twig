{% extends 'base.twig' %}

{% block body %}
    <main class="container">
        <div class="row space_between mb15 align-center">
            <button onclick="goBack()"><img src="/images/prev.png" alt=""></button>
            <a href="/profile"><img src="/images/account.png" alt="Compte"></a>
        </div>
        <h3 class="mb20">Ajoutez un mot</h3>
        <h2 class="mb20">Choississez un nuage de mot</h2>
        <div class="loop owl-carousel tags_cloud">
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
            <div class="mr10">
                <div class="">
                    <div class="img_radius cloud_mobile small_image">
                        <p class="sm_cloud_title">Mobile</p>
                    </div>
                </div>
            </div>
        </div>
        <section class="mb70">
            <form class="form" action="">
                <label for="word_name">Nom du mot</label>
                <input id="word_name" type="text" placeholder="Ex : développement">
                
                <label for="word_type">Type</label>
                <input id="word_type" type="text" placeholder="Ex : nom">
                
                <label>Définition</label>
                <textarea name=""></textarea>
                <div class="column align-center">
                    <button type="submit" class="button_submit">
                        <p>Envoyer mon ajout</p>
                    </button>
                </div>
            </form>
        </section>
    </main>
{% endblock %}
{% block js %}
    <script src="/js/owl.carousel.min.js"></script>
    <script>
        function goBack() {
            window.history.back();
        }

        $(document).ready(function () {
            $(".owl-carousel").owlCarousel();

            $('.loop').owlCarousel({
                center: true,
                items: 2,
                loop: true,
                margin: 20,
                responsive: {
                    600: {
                        items: 4
                    }
                }
            });

        });
    </script>
{% endblock %}