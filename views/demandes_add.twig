{% extends 'base.twig' %}

{% block body %}
    <div class="container">
        <div class="row space_between mb15 align-center">
            <button onclick="goBack()"><img src="/images/prev.png" alt=""></button>
            <a id="profile" href="/profile"><img src="/images/account.png" alt="Compte"></a>
        </div>
    </div>
    <section class="container_demands">
        <a href="/demandes-add" class="mx5">
            <div class="img_radius add_img">
                <p class="sm_cloud_title">Ajouts</p>
            </div>
        </a>
        <a href="/demandes-modify" class="mx5 filter">
            <div class="img_radius modify_img">
                <p class="sm_cloud_title">Modifications</p>
            </div>
        </a>
        <a href="/demandes-delete" class="mx5 filter">
            <div class="img_radius delete_img">
                <p class="sm_cloud_title">Suppression</p>
            </div>
        </a>
    </section>
    <main class="container">
        <section class="container_card3">
            {% for word in words %}
                <a href="/vald-word?q={{ word.id }}">
                    <div class="card_def row space_between align-center">
                        <div>
                            <h2>{{ word.name }}</h2>
                            <p class="type">({{ word.type }})</p>
                            <p class="text">{{ word.definition|slice(0, 140)}}</p>
                        </div>
                        <div class="next">
                            <img src="/images/next.png" alt="next">
                        </div>
                    </div>
                </a>
            {% endfor %}
        </section>
    </main>
{% endblock %}
{% block js %}
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
{% endblock %}